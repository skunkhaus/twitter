<h1>Listing tweets</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Body</th>
      <th>User</th>
      <th>Favorites count</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.body %></td>
        <td><%= tweet.user_id %></td>
        <td><%= tweet.favorites_count %></td>
        <td><%= link_to 'Show', tweet, :class => "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet),:class => "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tweet', new_tweet_path, :class => "btn btn-primary" %>